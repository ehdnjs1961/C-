#include <stdio.h>
int main()
{
	int i;
	scanf_s("%d", &i);
	for (int a = 1; a <= i; a++)
	{
		for (int b = 1; b <= a;b++)
		{
			printf("*");
		}
		for (int b = 2 * a + 1; b <= 2 * i; b++)
		{
			printf(" ");
		}
		for (int b = 1; b <= a;b++)
		{
			printf("*");
		}
		printf("\n");
	}
	for (int a = 2; a <= i; a++)
	{
		for (int b = a - i; b <= 0; b++ )
		{
			printf("*");
		}
		for (int b = 3 - 2 * a; b <= 0; b++)
		{
			printf(" ");
		}
		for (int b = a - i; b <= 0; b++)
		{
			printf("*");
		}
		printf("\n");
	}
}
