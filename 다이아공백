#include <stdio.h>
int main()
{
	int i;
	scanf_s("%d", &i);
	for (int a = 1; a <= i;a++)
	{
		for (int b = a - i; b <= 0; b++)
		{
			printf("*");
		}
		for (int b = 3 - 2 * a;b <= 0; b++)
		{
			printf(" ");
		}
		for (int b = a - i; b <= 0; b++)
		{
			printf("*");
		}
		printf("\n");
	}
	for (int a = 1; a <= i - 1; a++)
	{
		for (int b = 0; b <= a; b++)
		{
			printf("*");
		}
		for (int b = 2 * (a - i)+3;b <= 0;b++)
		{
			printf(" ");
		}
		for (int b = 0; b <= a; b++)
		{
			printf("*");
		}
		printf("\n");
	}
	
}
